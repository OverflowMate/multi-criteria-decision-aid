{% extends 'base.html.twig' %}

{% block title %}{{ 'component.add.criterias'|trans }}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-1 d-flex align-items-center">
            <a href="{{ path('create_or_update_component', {'componentId': form.vars.value.id, 'typeLabel':form.vars.value.type.label}) }}"
               class="btn btn-primary m-1">{{ 'component.add.return'|trans }}</a>
        </div>
        <div class="col-11">
            <h1>{% trans %}component.add.criterias{% endtrans %}</h1>
            <h3>Component : {{ form.vars.value.label }},
                type: {{ ('component.form.name.' ~ form.vars.value.type.label)|trans }}</h3>
        </div>
    </div>
    <div class="row">
        {{ form_start(form, {'attr': {'class': 'w-100'}}) }}
        {% for componentCriteria in form.componentCriterias %}
            <div class="row">
                <div class="col-sm-6 d-flex align-items-center">
                    {{ componentCriteria.vars.value.criteria.label }}
                    to {{ componentCriteria.vars.value.criteria.unit }}
                </div>
                <div class="col-sm-6">
                    {{ form_widget(componentCriteria) }}
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <a href="{{ path('component_list', {'typeLabel': form.vars.value.type.label}) }}"
               class="btn btn-danger m-1">{{ 'component.add.cancel'|trans }}</a>
            <button type="submit" class="btn btn-success m-1">{{ 'component.add.validate'|trans }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}