{% extends 'base.html.twig' %}

{% block title %}{{ 'component.list.title'|trans({'%type%': ('component.list.' ~ typeLabel)|trans}) }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>{{ 'component.list.title'|trans({'%type%': ('component.list.' ~ typeLabel)|trans}) }}</h1>
        </div>
        <div class="col text-md-right">
            <a href="{{ path('create_or_update_component', {'typeLabel': typeLabel}) }}" role="button"
               class="btn btn-success">{% trans %}component.list.action.add{% endtrans %} {{ ('component.list.' ~ typeLabel)|trans }}</a>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">{% trans %}component.list.label{% endtrans %}</th>
                    <th scope="col">{% trans %}component.list.description{% endtrans %}</th>
                    <th scope="col">{% trans %}component.list.link{% endtrans %}</th>
                    <th scope="col">{% trans %}component.list.type{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for component in components %}
                    <tr>
                        <th scope="row">{{ component.label }}</th>
                        <td>{{ component.description }}</td>
                        <td>{{ component.link }}</td>
                        <td>{{ component.type }}</td>
                        <td>
                            <a href="{{ path('component_delete', {'componentId': component.id, 'typeLabel': typeLabel}) }}"
                               class="badge badge-danger">{% trans %}component.list.action.remove{% endtrans %}</a>
                            <a href="{{ path('create_or_update_component', {'componentId': component.id, 'typeLabel': typeLabel}) }}"
                               class="badge badge-secondary">{% trans %}component.list.action.edit{% endtrans %}</a>
                            <a href="{{ path('create_or_update_component_criteria', {'typeLabel': typeLabel, 'componentId': component.id}) }}"
                               class="badge badge-secondary">{% trans %}component.list.action.edit_criteria{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

