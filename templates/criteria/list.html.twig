{% extends 'base.html.twig' %}

{% block title %}Hello CriteriaController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>{% trans %}criteria.list.name{% endtrans %}</h1>
        </div>
        <div class="col text-md-right">
            <a href="{{ path('criteria_add') }}" role="button" class="btn btn-success">{% trans %}criteria.list.action.add{% endtrans %}</a>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">{% trans %}criteria.list.label{% endtrans %}</th>
                    <th scope="col">{% trans %}criteria.list.description{% endtrans %}</th>
                    <th scope="col">{% trans %}criteria.list.mesure_unit{% endtrans %}</th>
                    <th scope="col">{% trans %}criteria.list.actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for criteria in criterias %}
                    <tr>
                        <th scope="row">{{ criteria.label }}</th>
                        <td>{{ criteria.description }}</td>
                        <td>{{ criteria.mesureUnit }}</td>
                        <td>
                            <a href="#"
                               class="badge badge-danger">{% trans %}criteria.list.action.remove{% endtrans %}</a>
                            <a href="#"
                               class="badge badge-secondary">{% trans %}criteria.list.action.edit{% endtrans %}</a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
