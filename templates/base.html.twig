<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light"  style="background-color: #e3f2fd;">

        <a class="navbar-brand" href="{{ path('home') }}">{% trans %}menu.name{% endtrans %}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {% trans %}menu.component.name{% endtrans %}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {% for menuType in menuTypes %}
                            <a class="dropdown-item"
                               href="{{ path('component_list',{'typeLabel': menuType.label}) }}">{{ ('menu.component.' ~ menuType)|trans }}</a>
                        {% endfor %}
                    </div>
                </li>
                <a class="nav-item nav-link"
                   href="{{ path('criteria_list') }}">{% trans %}menu.criteria{% endtrans %}</a>
                <a class="nav-item nav-link"
                   href="{{ path('processing_form') }}">{% trans %}menu.process{% endtrans %}</a>
                <a class="nav-item nav-link"
                   href="{{ path('result_list') }}">{% trans %}menu.result{% endtrans %}</a>
            </div>
        </div>
    </nav>
</header>
<div class="container mt-5">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
